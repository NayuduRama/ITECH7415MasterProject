<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd
http://xmlns.jcp.org/xml/ns/javaee "
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Java.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserRegServlet</servlet-name>
        <servlet-class>Java.UserRegServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CertificateServlet</servlet-name>
        <servlet-class>Java.CertificateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgetServlet</servlet-name>
        <servlet-class>Java.ForgetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgetNewServlet</servlet-name>
        <servlet-class>Java.ForgetNewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WorkoutServlet</servlet-name>
        <servlet-class>Java.WorkoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>Java.AdminServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserRegServlet</servlet-name>
        <url-pattern>/UserRegServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CertificateServlet</servlet-name>
        <url-pattern>/CertificateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgetServlet</servlet-name>
        <url-pattern>/ForgetServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgetNewServlet</servlet-name>
        <url-pattern>/ForgetNewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WorkoutServlet</servlet-name>
        <url-pattern>/WorkoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/AdminServlet</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>


